<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>huudn.filters.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>huudn.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>huudn.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmationController</servlet-name>
        <servlet-class>huudn.controllers.ConfirmationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>huudn.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>huudn.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchArticleController</servlet-name>
        <servlet-class>huudn.controllers.SearchArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowArticleController</servlet-name>
        <servlet-class>huudn.controllers.ShowArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostArticleController</servlet-name>
        <servlet-class>huudn.controllers.PostArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentController</servlet-name>
        <servlet-class>huudn.controllers.CommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSearchArticleController</servlet-name>
        <servlet-class>huudn.controllers.AdminSearchArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminApprovalArticleController</servlet-name>
        <servlet-class>huudn.controllers.AdminApprovalArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDeleteArticleController</servlet-name>
        <servlet-class>huudn.controllers.AdminDeleteArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendingCodeController</servlet-name>
        <servlet-class>huudn.controllers.SendingCodeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminShowArticleController</servlet-name>
        <servlet-class>huudn.controllers.AdminShowArticleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/RegistrationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmationController</servlet-name>
        <url-pattern>/ConfirmationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchArticleController</servlet-name>
        <url-pattern>/SearchArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowArticleController</servlet-name>
        <url-pattern>/ShowArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostArticleController</servlet-name>
        <url-pattern>/PostArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentController</servlet-name>
        <url-pattern>/CommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSearchArticleController</servlet-name>
        <url-pattern>/AdminSearchArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminApprovalArticleController</servlet-name>
        <url-pattern>/AdminApprovalArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDeleteArticleController</servlet-name>
        <url-pattern>/AdminDeleteArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendingCodeController</servlet-name>
        <url-pattern>/SendingCodeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminShowArticleController</servlet-name>
        <url-pattern>/AdminShowArticleController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>SearchArticleController</welcome-file>
    </welcome-file-list>
</web-app>
